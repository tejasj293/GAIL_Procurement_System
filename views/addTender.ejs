<%- include ('partials/header') %>

    <div class='container'>

        <h1>Create New Tender</h1>

        <form>
            <div class="form-group">
              <label for="orgName">Name: </label>
              <input type="text" class="form-control" name="orgName" id="orgName" placeholder="Enter Your Organization's Name">
            </div>
            <div class="form-group">
              <label for="contactDetails">Contact Details: </label>
              <input type="text" class="form-control" name="contactDetails" id="contactDetails" aria-describedby="contactHelp" placeholder="Organization's Contact Details">
              <small id="contactHelp" class="form-text text-muted">Phone, Fax</small>
            </div>
            <div class="form-group">
                <label for="startDate">Start Date: </label>
                <input type="date" class="form-control" name="startDate" id="startDate">
            </div>
            <div class="form-group">
                <label for="endDate">End Date: </label>
                <input type="date" class="form-control" name="endDate" id="endDate">
            </div>
            <div class="form-group">
                <label for="purpose">Purpose: </label>
                <textarea type="text" rows=5 class="form-control" name="Purpose" id="Purpose"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Add Tender</button>
          </form>
    </div>

<%- include ('partials/footer') %>